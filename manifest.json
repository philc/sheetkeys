{
  "manifest_version": 3,
  "name": "Sheetkeys",
  "version": "0.1",
  "description": "Sheetkeys is a Chrome extension which adds powerful keyboard navigation shortcuts to Google Sheets, in the spirit of the Vim text editor.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background_script.js"
  },
  // Uncommenting this will make this page accessible by navigating to chrome://extensions and clicking on the
  // Options page for SheetKeys. It is faster to test UI without having to load and reload a heavy-weight
  // Google Sheets page.
  "options_page": "harnesses/help_dialog_harness.html",
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*",
                  "https://docs.google.com/a*/spreadsheets/*"],
      "js": ["content_scripts/keyboard_utils.js",
             "content_scripts/settings.js",
             "content_scripts/sheet_actions.js",
             "content_scripts/ui.js",
             "content_scripts/commands.js",
             "help_dialog.js"],
      "run_at": "document_end",
      "all_frames": false
    }],
  "web_accessible_resources": [
    {
      "resources": ["page_scripts/page_script.js",
                    "fontello_svg_icon_font.css",
                    "help_dialog.css",
                    "help_dialog.html"],
      "matches": ["https://docs.google.com/*"]
    }]
}
